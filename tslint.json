{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "tabs",
            4
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "no-console": [
            false
        ],
		"object-literal-sort-keys": false
    }
}
